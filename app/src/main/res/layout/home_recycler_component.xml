<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="412dp"
        android:layout_height="186dp">

        <ImageView
            android:id="@+id/shirt_imageview"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="37dp"
            android:contentDescription="@string/shirt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pants_imageview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_recycler_textview"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/pants_imageview"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="23dp"
            android:contentDescription="@string/pants"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/shoes_imageview"
            app:layout_constraintStart_toEndOf="@+id/shirt_imageview"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/shoes_imageview"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="21dp"
            android:contentDescription="@string/shoes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pants_imageview"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/home_recycler_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="11dp"
            android:text="@string/textview"
            app:layout_constraintBottom_toTopOf="@+id/shirt_imageview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>