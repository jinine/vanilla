<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClothingInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_info_confirmation"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/name_textview_clothinginfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Name"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/size_textview_clothinginfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Size"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/colour_textview_clothinginfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Colour"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/brand_textview_clothinginfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Brand"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/itemtype_textview_clothinginfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="ItemType"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView_info_created"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Created!"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>