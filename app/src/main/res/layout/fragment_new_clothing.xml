<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewClothingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/newclothing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:text="Details"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="23dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_upload_image" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="55dp"
            android:text="Size"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_textview" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="62dp"
            android:text="Colour"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="43dp"
            android:text="Brand"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup_new_clothing"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/add_new_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#FEE69E"
            android:text="Add New Item"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_input"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="147dp"
            android:hint="name"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/size_input"
            app:layout_constraintStart_toEndOf="@+id/imageView_upload_image"
            app:layout_constraintTop_toBottomOf="@+id/newclothing_title"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/size_input"
            android:layout_width="172dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="34dp"
            android:hint="size"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/colour_input"
            app:layout_constraintStart_toStartOf="@+id/colour_input"
            app:layout_constraintTop_toBottomOf="@+id/name_input" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/colour_input"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="79dp"
            android:hint="colour"
            app:layout_constraintBottom_toBottomOf="@+id/brand_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/brand_input"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:hint="brand"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/size_input"
            app:layout_constraintStart_toStartOf="@+id/name_input"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/select_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="#FEE69E"
            android:text="Select Image"
            app:layout_constraintStart_toEndOf="@+id/imageView_upload_image"
            app:layout_constraintTop_toTopOf="@+id/imageView_upload_image" />

        <ImageView
            android:id="@+id/imageView_upload_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="67dp"
            android:layout_marginBottom="67dp"
            app:layout_constraintBottom_toBottomOf="@+id/name_input"
            app:layout_constraintEnd_toEndOf="@+id/newclothing_title"
            app:layout_constraintStart_toStartOf="@+id/name_textview"
            app:layout_constraintTop_toTopOf="@+id/newclothing_title"
            tools:src="@tools:sample/avatars" />

        <RadioGroup
            android:id="@+id/radioGroup_new_clothing"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="139dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/radioButton_new_clothing_shirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shirt" />

            <RadioButton
                android:id="@+id/radioButton_new_clothing_pants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pants" />

            <RadioButton
                android:id="@+id/radioButton_new_clothing_shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shoes" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_new_clothing_requirements"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="43dp"
            android:textColor="#E91E36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/add_new_button"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>